{% sw_extends '@Strofront/storefront/base.html.twig' %}
{% set DcNotification = page.extensions.notification %}

{% block base_header %}
    {% if(DcNotification.displayAs == "bar" and DcNotification.position == "top") %}
        {% sw_include '@Storefront/storefront/layout/notification-bar.html.twig' %}
    {% endif %}

    {{ parent() }}
{% endblock %}

{% block base_main %}
    {% if(DcNotification.displayAs == "bar" and DcNotification.position == "below-header") %}
        {% sw_include '@Storefront/storefront/layout/notification-bar.html.twig' %}
    {% endif %}

    {{ parent() }}

    {% if(DcNotification.displayAs == "bar" and DcNotification.position == "above-footer") %}
        {% sw_include '@Storefront/storefront/layout/notification-bar.html.twig' %}
    {% endif %}
{% endblock %}

{% block base_footer %}
    {{ parent() }}

    {% if(DcNotification.displayAs == "bar" and DcNotification.position == "bottom") %}
        {% sw_include '@Storefront/storefront/layout/notification-bar.html.twig' %}
    {% endif %}
{% endblock %}


{% block base_body_inner %}
    {{ parent() }}

    {% if(DcNotification.displayAs == "popup") %}
        {% sw_include '@Storefront/storefront/layout/notification-popup.html.twig' %}
    {% endif %}

{% endblock %}