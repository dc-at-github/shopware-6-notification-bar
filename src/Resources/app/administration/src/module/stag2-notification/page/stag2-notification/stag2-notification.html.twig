{% block stag2_notification_config_container %}
    <sw-page class="sw-stag2-notification">
        {% block sw_stag2_notification_header %}
            <template slot="smart-bar-header">
                <h2>{{ $tc('stag2.notification.list.title') }}</h2>
            </template>
        {% endblock %}

        {% block sw_stag2_actions_container %}
            <template slot="smart-bar-actions">
                {% block sw_stag2_action_create %}
                    <sw-button
                            :routerLink="{name:'stag2.notification.create'}"
                            class="sw_stag2_notification__action_create"
                            :isLoading="isLoading"
                            variant="primary">
                        {{ $tc('stag2.notification.button.create') }}
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}


        {% block sw_stag2_language_switch %}
            <template slot="language-switch">
                <sw-language-switch @on-change="onChangeLanguage"></sw-language-switch>
            </template>
        {% endblock %}

        <template slot="content">
                {% block stag2_notification_list %}
                    <sw-entity-listing
                            v-if="stag2Notifications && total > 0"
                            :items="stag2Notifications"
                            detailRoute="stag2.notification.detail"
                            :repository="notificationRepository"
                            :showSelection="true"
                            :columns="columns"
                            :isLoading="isLoading">

                        {% block stag2_notification_column_active %}
                            <template #column-active="{item}">
                                <sw-icon name="default-basic-shape-circle-filled" v-if="item.active" size="12px" color="#1abc9c" />
                                <sw-icon name="default-basic-shape-circle-filled" v-if="!item.active" size="12px" color="#fc427b" />
                            </template>
                        {% endblock %}

                    </sw-entity-listing>
                {% endblock %}

                {% block stag2_notification_no_record %}
                    <template v-if="!isLoading && !total">
                        <sw-empty-state
                                :title="$tc('stag2.notification.general.noRecordTitle')"
                                :subline="$tc('stag2.notification.general.noRecordSubline')">
                        </sw-empty-state>
                    </template>
                {% endblock %}
        </template>

    </sw-page>
{% endblock %}